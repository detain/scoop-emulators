    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$persist_dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": [
        [
            "retroarch.exe",
            "retroarch-dev"
        ]
    ],
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch (dev)"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "shaders\\presets",
        "states",
        "system",
        "thumbnails",
        "content_favorites.lpl",
        "content_history.lpl",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://buildbot.libretro.com/nightly/windows/x86_64/",
        "regex": "(?smi)(\\d{4}-\\d{2}-\\d{2})_RetroArch\\.7z",
        "reverse": true
    },
    "autoupdate": {
        "architecture": {
