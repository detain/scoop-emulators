            "hash": "56772fb486bcf481ba4cfc7eb19b62b85ce280e9d90d73a391efbe3e6eabc134",
            "extract_dir": "mGBA-build-2023-10-25-win32-8249-9c9f31d0d1d3eddb6aa77afe9784f09e9cb018e2"
        },
        "64bit": {
            "url": "https://s3.amazonaws.com/mgba/build/mGBA-build-2023-10-25-win64-8249-9c9f31d0d1d3eddb6aa77afe9784f09e9cb018e2.7z",
